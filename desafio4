version: '3.8'

services:
  service_a:
    build:
      context: ./service_a
      dockerfile: Dockerfile
    container_name: microservice_a
    ports:
      - "5001:5001"
    networks:
      - microservices_net

  service_b:
    build:
      context: ./service_b
      dockerfile: Dockerfile
    container_name: microservice_b
    ports:
      - "5002:5002"
    environment:
      SERVICE_A_URL: http://service_a:5001/users
    depends_on:
      - service_a
    networks:
      - microservices_net

networks:
  microservices_net:
    driver: bridge
